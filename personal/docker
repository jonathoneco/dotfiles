alias psql='docker exec -it postgresql psql -U "postgres_user"'

alias genpass='openssl rand -base64 36 | tr -d \n | sudo tee'
alias genpass60='openssl rand -base64 60 | tr -d \n | sudo tee'
alias hashpass='openssl passwd'

