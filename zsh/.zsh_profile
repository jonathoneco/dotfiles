# Generic .zsh_profile that sources OS-specific configuration

# Detect OS and source appropriate config
if [[ "$OSTYPE" == "darwin"* ]]; then
    # macOS
    source "$ZDOTDIR/.zsh_profile.mac"
elif [[ "$OSTYPE" == "linux-gnu"* ]]; then
    # Linux
    source "$ZDOTDIR/.zsh_profile.ubuntu"
else
    echo "⚠️  Unknown OS type: $OSTYPE"
    echo "Falling back to macOS config"
    source "$ZDOTDIR/.zsh_profile.mac"
fi