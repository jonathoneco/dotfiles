#!/bin/bash
# Launch rofi with different views
# Usage: ./rofi-launcher <view> [rofi arguments...]

# Initialize fontconfig to avoid warnings
export FONTCONFIG_PATH="/etc/fonts"

if [ $# -eq 0 ]; then
    echo "Usage: $0 <view> [rofi arguments...]"
    echo "Views: spotlight, base, apps, windows, run, notes, wallpaper"
    echo "Examples:"
    echo "  $0 spotlight -show combi"
    echo "  $0 notes -dmenu -p 'Notes'"
    echo "  $0 apps -show drun"
    echo "  $0 wallpaper -dmenu < wallpaper_list.txt"
    exit 1
fi

view="$1"
shift  # Remove first argument, leaving the rest for rofi

case "$view" in
    "base")
        config="$HOME/.config/rofi/views/base.rasi"
        ;;
    "spotlight")
        config="$HOME/.config/rofi/views/spotlight.rasi"
        ;;
    "apps")
        config="$HOME/.config/rofi/views/apps.rasi"
        ;;
    "windows")
        config="$HOME/.config/rofi/views/windows.rasi"
        ;;
    "run")
        config="$HOME/.config/rofi/views/run.rasi"
        ;;
    "notes")
        config="$HOME/.config/rofi/views/notes.rasi"
        ;;
    "wallpaper")
        config="$HOME/.config/rofi/views/wallpaper.rasi"
        ;;
    *)
        echo "Unknown view: $view"
        echo "Available views: spotlight, base, apps, windows, run, notes, wallpaper"
        exit 1
        ;;
esac

# Pass all remaining arguments to rofi
rofi -config "$config" "$@"

